<?xml version="1.0" encoding="UTF-8"?>
<kcfg xmlns="http://www.kde.org/standards/kcfg/2.0"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.kde.org/standards/kcfg/2.0
                          http://www.kde.org/standards/kcfg/2.0/kcfg.xsd">
    <kcfgfile name=""/>
    <group name="General">
        <entry name="useDecimals" type="Bool">
            <default>false</default>
        </entry>
        <entry name="ramShowGB" type="Bool">
            <default>false</default>
        </entry>
        <entry name="brightColors" type="Bool">
            <default>true</default>
        </entry>
        <entry name="warnEnabled" type="Bool">
            <default>true</default>
        </entry>
        <entry name="showCpu" type="Bool">
            <default>true</default>
        </entry>
        <entry name="showGpu" type="Bool">
            <default>true</default>
        </entry>
        <entry name="showRam" type="Bool">
            <default>true</default>
        </entry>
        <entry name="showBat" type="Bool">
            <default>true</default>
        </entry>
        <entry name="updateIntervalSec" type="Int">
            <default>1</default>
            <min>1</min>
            <max>60</max>
        </entry>
        <entry name="batOnRight" type="Bool">
            <default>false</default>
        </entry>
        <entry name="showChargingIcon" type="Bool">
            <default>true</default>
        </entry>
        <entry name="itemSpacing" type="Int">
            <default>3</default>
            <min>1</min>
            <max>10</max>
        </entry>
        <entry name="showBatSpacer" type="Bool">
            <default>false</default>
        </entry>
        <entry name="clickCommand" type="String">
            <default>wezterm -e htop</default>
        </entry>
        <entry name="showNet" type="Bool">
            <default>true</default>
        </entry>
        <entry name="showCpuTemp" type="Bool">
            <default>false</default>
        </entry>
        <entry name="showGpuTemp" type="Bool">
            <default>false</default>
        </entry>
        <entry name="showDisk" type="Bool">
            <default>false</default>
        </entry>
        <entry name="showTrendArrows" type="Bool">
            <default>false</default>
        </entry>
        <entry name="showBatTime" type="Bool">
            <default>false</default>
        </entry>
        <entry name="showUptime" type="Bool">
            <default>false</default>
        </entry>
        <entry name="cpuWarnThreshold" type="Int">
            <default>90</default>
            <min>0</min>
            <max>100</max>
        </entry>
        <entry name="gpuWarnThreshold" type="Int">
            <default>90</default>
            <min>0</min>
            <max>100</max>
        </entry>
        <entry name="ramWarnThreshold" type="Int">
            <default>90</default>
            <min>0</min>
            <max>100</max>
        </entry>
        <entry name="batWarnThreshold" type="Int">
            <default>15</default>
            <min>0</min>
            <max>100</max>
        </entry>
        <entry name="useIcons" type="Bool">
            <default>false</default>
        </entry>
        <entry name="batteryModeEnabled" type="Bool">
            <default>true</default>
        </entry>
        <entry name="batteryModeInterval" type="Int">
            <default>5</default>
            <min>1</min>
            <max>60</max>
        </entry>
        <entry name="cpuColor" type="String">
            <default></default>
        </entry>
        <entry name="gpuColor" type="String">
            <default></default>
        </entry>
        <entry name="ramColor" type="String">
            <default></default>
        </entry>
        <entry name="batColor" type="String">
            <default></default>
        </entry>
        <entry name="netColor" type="String">
            <default></default>
        </entry>
        <entry name="diskColor" type="String">
            <default></default>
        </entry>
        <entry name="uptimeColor" type="String">
            <default></default>
        </entry>
        <entry name="warnColor" type="String">
            <default></default>
        </entry>
    </group>
</kcfg>
